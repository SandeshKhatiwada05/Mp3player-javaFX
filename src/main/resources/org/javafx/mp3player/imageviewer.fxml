<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.javafx.mp3player.ImageViewerController"
            stylesheets="@style.css">

    <top>
        <Label text="ðŸ–¼ Sandesh's Image Viewer"
               styleClass="title-label"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <ImageView fx:id="imageView"
                       fitHeight="400"
                       fitWidth="600"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);"/>
